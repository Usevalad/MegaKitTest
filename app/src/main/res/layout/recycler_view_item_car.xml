<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/car_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/car_card_view_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/main_car_image_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/main_car_manufacturer_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_car_image_view"
            android:text="Manufacturer"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/main_car_model_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_car_manufacturer_text_view"
            android:text="Model"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/main_car_body_type_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_car_model_text_view"
            android:text="Body type"
            android:textSize="18sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>